{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@ingressohub/entities": ["../../packages/entities/src"],
      "@ingressohub/entities/*": ["../../packages/entities/src/*"]
    }
  },
  "references": [
    { "path": "../../packages/entities" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
