{
  "name": "ingressohub",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "cd apps/mobile && npx expo start -c",
    "dev:api": "cd apps/api && npm run dev",
    "install:api": "cd apps/api && npm i",
    "install:mobile": "cd apps/mobile && npm i",
    "build": "npm run build --workspaces",
    "build:mobile": "cd apps/mobile && npm run build",
    "build:api": "cd apps/api && npm run build",
    "build:entities": "cd packages/entities && npm run build",
    "clean": "npm run clean --workspaces",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces"
  },
  "devDependencies": {
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.212.0",
    "constructs": "^10.4.2"
  }
}
